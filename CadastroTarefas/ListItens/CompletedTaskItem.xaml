<Border
    x:Class="CadastroTarefas.ListItens.CompletedTaskItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="32,32,32,0"
    d:DesignHeight="200"
    d:DesignWidth="200"
    BorderBrush="Gray"
    BorderThickness="2"
    CornerRadius="5"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Padding="16"
            FontSize="18"
            TextWrapping="Wrap">
            <Run Text="{Binding UserTask.Description, FallbackValue=None}" />
        </TextBlock>

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Padding="8"
            Background="#F95346"
            Command="{Binding DataContext.RemoveCompletedCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
            CommandParameter="{Binding .}"
            Content="Remover" />
    </Grid>
</Border>