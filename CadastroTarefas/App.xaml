<Application
    x:Class="CadastroTarefas.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:CadastroTarefas.Converters"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <cvt:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter" />
            <cvt:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
            <cvt:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <s:Boolean x:Key="True">True</s:Boolean>
            <s:Boolean x:Key="False">False</s:Boolean>
        </ResourceDictionary>
    </Application.Resources>
</Application>